{{> restaurant-tabs route='feeds'}}
<h1>最新動態</h1>
<hr />
<div class="row mt-5">
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        最新餐廳
      </div>
      <div class="card-body">
        {{#each restaurants}}
        <div>
          <h4>
            <a class="link-primary" href="/restaurants/{{this.id}}">{{this.name}}</a>
            <small class="fs-6">
              <a class="text-dark" href="/restaurants/?categoryId={{this.Category.id}}">
                [{{this.Category.name}}]
              </a>
            </small>
            <div>
              <a href="/restaurants/{{this.id}}">
                <img class="card-img-top img-fluid " src="{{this.image}}" alt="Card image cap"
                  style="transition: opacity 0.5s; opacity:0; width: auto; max-height: 310.33px;" onload="this.style.opacity=1;">
              </a>
            </div>
          </h4>
          <p class="my-4" style="white-space: break-spaces;">{{this.description}}</p>
          在 {{fromNow this.createdAt}}建立
          <hr>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        最新評論
      </div>
      <div class="card-body">
        {{#each comments}}
          {{#if this.Restaurant.id}}
            <div>
              <h4>
                <a class="link-primary" href="/restaurants/{{this.Restaurant.id}}">{{this.Restaurant.name}}</a>
              </h4>
              <p class="my-4" style="white-space: break-spaces;">{{this.text}}</p>
              - <a class="link-secondary" href="/users/{{this.User.id}}">{{this.User.name}}</a>
              <small> 在 {{fromNow this.createdAt}}評論 </small>
              <hr>
            </div>
          {{else}}
            <div>
              <h4 style="color: brown;">餐廳已遭刪除</h4>
              - <a class="link-secondary" href="/users/{{this.User.id}}">{{this.User.name}}</a>
              <small> 在 {{fromNow this.createdAt}}評論 </small>
              <hr>
            </div>
          {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
</div>